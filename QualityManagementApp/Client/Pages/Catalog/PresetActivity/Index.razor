@page "/presetActivities"
@using QualityManagementApp.Client.Services.Contracts.Catalog
@using QualityManagementApp.Shared
@inject IPresetActivityService PresetActivityService
@inject NavigationManager navigation
<PageTitle>Actividades Predefinidas</PageTitle>

<div class="mat-layout-grid-inner">
    <div class="mat-layout-grid-cell" style="margin-top:-5%; margin-bottom:-5%"></div>
    <div class="mat-layout-grid-cell" style="margin-top:-5%; margin-bottom:-5%">
        <MatH4><MatIcon Style="font-size:32px; margin-top:-5%" Icon="ballot"></MatIcon> Actividades Predefinidas</MatH4>
    </div>
    <div class="mat-layout-grid-cell" style="margin-top:-5%; margin-bottom:-5%"></div>
</div>

<div class="mat-layout-grid-inner" style="margin-bottom:5%">
    <div class="mat-layout-grid-cell">
        <MatButton Icon="add_circle" OnClick="@(() => navigation.NavigateTo("presetActivities_details"))" Label="Nueva Actividad"></MatButton>
    </div>
    <div class="mat-layout-grid-cell">
    </div>
    <div class="mat-layout-grid-cell"></div>
</div>

@if (PresetActivityService.PresetActivities == null)
{
            <div class="mat-layout-grid-inner">
                <div class="mat-layout-grid-cell" style="margin-top:-5%; margin-bottom:-5%"></div>
                <div class="mat-layout-grid-cell" style="margin-top:-5%; margin-bottom:-5%">
                    <MatProgressCircle Indeterminate="true" Size="MatProgressCircleSize.Large" />
                </div>
                <div class="mat-layout-grid-cell" style="margin-top:-5%; margin-bottom:-5%"></div>
            </div>
}
else if (PresetActivityService.PresetActivities.Length == 0)
{
            <div class="mat-layout-grid-inner">
                <div class="mat-layout-grid-cell" style="margin-top:-5%; margin-bottom:-5%"></div>
                <div class="mat-layout-grid-cell" style="margin-top:-5%; margin-bottom:-5%">
                    <MatH6>Parece que no tienes ninguna actividad predefinida añadida.</MatH6>
                </div>
                <div class="mat-layout-grid-cell" style="margin-top:-5%; margin-bottom:-5%"></div>
            </div>
}
else
{

            @*<MatTable SelectionChanged="@((row) => navigation.NavigateTo("presetActivities_details/" + ((Model.PresetActivity)row).PkPresetActivity))" Items="@PresetActivityService.PresetActivities" AllowSelection="true" FilterByColumnName="Title" DebounceMilliseconds="150">
                <MatTableHeader>
                    <th style="width:20%">Titulo</th>
                    <th style="width:90%">Descripcion</th>
                    <th style="width:90%">Calidad Esperada</th>
                </MatTableHeader>
                <MatTableRow>
                    <td>@context.Title</td>
                    <td>@context.Description</td>
                    <td>@context.QualityExpected</td>
                </MatTableRow>
            </MatTable>*@
}

@*<MatSnackbar @bind-IsOpen="@PresetActivityService.Snackbar.SnackbarIsOpen" Leading="true">
    <MatSnackbarContent>@PresetActivityService.Snackbar.Message</MatSnackbarContent>
</MatSnackbar>*@

@code {
    protected override async Task OnInitializedAsync()
    {
        await PresetActivityService.GetPresetActivities();
    }
}
